[Unit]
Description=<<DESCRIPTION>>
Documentation=http://github.com/lvjhn/notipp
After=After=systemd-user-sessions.service,systemd-journald.service

[Service]
Environment=
Type=simple
Group=sudo
ExecStart=<<NODE_EXEC>> <<TARGET_MODULE>>
Restart=always
RestartSec=1
KillMode=process
IgnoreSIGPIPE=no
RemainAfterExit=yes
Environment="DISPLAY=:0" "XAUTHORITY=/home/<<USERNAME>>/.Xauthority"

[Install]
WantedBy=multi-user.target